CC_OPTS = select({
    "@bazel_tools//src/conditions:windows": ["/std:c++17"],
    "//conditions:default": ["--std=c++17"],
})

cc_library(
    name = "lsquic",
    srcs = glob(["src/liblsquic/*.c"]),
    hdrs = glob(["include/*.h"]),
    copts = CC_OPTS,
    includes = [
        "./lsquic/include",
        "./lsquic/src",
    ] + select({
        "@bazel_tools//src/conditions:windows": ["./lsquic/wincompat"],
        "//conditions:default": [],
    }),
    visibility = ["//visibility:public"],
    deps = [":xxhash"],
)

cc_library(
    name = "xxhash",
    srcs = ["src/lshpack/deps/xxhash/xxhash.c"],
    hdrs = ["src/lshpack/deps/xxhash/xxhash.h"],
    copts = CC_OPTS,
)
