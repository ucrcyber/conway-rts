CC_OPTS = select({
    "@bazel_tools//src/conditions:windows": ["/std:c++17"],
    "//conditions:default": [],
})

cc_library(
    name = "boringssl",
    srcs = glob([
        "crypto/*.c",
        "ssl/*.c",
    ]),
    hdrs = glob([
        "include/openssl/*.h",
        "crypto/**/*.h",
        "ssl/**/*.h",
    ]),
    copts = CC_OPTS,
    includes = ["./include"],
    visibility = ["//visibility:public"],
)
