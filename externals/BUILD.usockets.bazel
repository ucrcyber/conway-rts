CC_OPTS = select({
    "@bazel_tools//src/conditions:windows": ["/std:c++17"],
    "//conditions:default": ["-std=c++17"],
})

cc_library(
    name = "usockets",
    srcs = glob(["src/**/*.c"]),
    hdrs = glob(["src/**/*.h"]),
    copts = CC_OPTS,
    defines = ["LIBUS_NO_SSL"],  # ssl isn't linked properly (results in even more unresolved external symbols)
    includes = ["./src"],
    visibility = ["//visibility:public"],
    deps = [
        "@boringssl",
        "@libuv",
        "@lsquic",
    ],
)
